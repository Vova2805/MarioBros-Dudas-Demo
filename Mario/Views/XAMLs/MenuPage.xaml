<Page x:Class="Lab5_KPZ.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab5_KPZ"
      mc:Ignorable="d"
      Title="MenuPage" KeyDown="MenuPage_OnKeyDown">

    <StackPanel Name="Menu" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto">
        <!--Visibility="Hidden"-->
        <MediaElement x:Name="PlaySound" Source="../Source/Sounds/gulp.wav" Height="0" Width="0"  />
        <Button Content="New game" Click="NewGame_click" Width="300" Height="60" FontSize="20"/>
        <Button Content="Settings"  Click="Settings_click" Width="300" Height="60" FontSize="20"/>
        <Button Content="View score" Click="View_score" Width="300" Height="60" FontSize="20"/>
        <Button Content="Create map" Click="CreateMap_click" Width="300" Height="60" FontSize="20"/>
        <Button Content="Quit" Click="Quit_click" Width="300" Height="60" FontSize="20"/>
    </StackPanel>
</Page>
